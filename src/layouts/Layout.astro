---
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Contact form of RikiyaOta" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | RikiyaOta</title>
		<style is:global>
			section {
				min-height: 80vh;
			}
		</style>
	</head>
	<body class="dark">
		<div class="bg-white dark:bg-gray-900" style="min-height: 100vh">
			<slot />
			<Footer />
		</div>
	</body>
</html>